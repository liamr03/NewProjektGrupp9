<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="educationPU">

        <class>entities.Student</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/SkolaDB"/>
            <property name="jakarta.persistence.jdbc.user" value="username"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
